</table>

<table cellpadding="0" cellspacing="0">
    <tr>
        @for (int i = 1; i <= Model.PagingValues.PageCount; i++)
        {
            <td>
                @if (i != Model.PagingValues.CurrentPageIndex)
                {
                    <a href="javascript:PagerClick(@i);">@i</a>
                }
                else
