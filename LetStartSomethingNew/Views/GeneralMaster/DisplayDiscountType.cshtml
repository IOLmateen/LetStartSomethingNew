@model LetStartSomethingNew.Models.GeneralMaster.GeneralMaster.DiscountType
@{
    ViewBag.Title = "DisplayDiscountType";
}

<h2>DisplayDiscountType</h2>

<style>
     .ui-autocomplete {
         max-height: 100px;
         overflow-y: auto;
         overflow-x: hidden;
     }
     
     * html .ui-autocomplete {
         height: 100px;
     }
</style>

<script>
    $(function () {
        var pidvalue = 0;
        $("#SearchDiscount").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/GeneralMaster/SearchDiscountTypeByString",
                    type: "POST",
                    dataType: "json",
                    data: { prefix: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            pidvalue = item.Pid;
                            return { value: item.DiscountTypeName, label: item.DiscountTypeName };
                        }))
                    }, error: function (response) {
                        alert(response.responseText);
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    }
                })
            },
            select: function (e, i) {
                $("#Pid").val(pidvalue);
            },
            minLength: 3,
            messages: {
                noResults: "", results: function (resultsCount) { }
            }
        }); 
     });

</script>
